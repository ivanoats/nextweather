#!/usr/bin/env sh
husky_sh="$(dirname -- "$0")/_/husky.sh"
if [ -r "$husky_sh" ]; then
  . "$husky_sh"
else
  echo "warning: .husky/_/husky.sh not found; continuing without Husky helper" >&2
fi

echo "Running pre-push checks..."

# Run tests
echo "Running tests..."
npm test || exit 1

# Run build to ensure production build succeeds
echo "Running production build..."
npm run build || exit 1

echo "âœ… Pre-push checks passed!"
