#!/usr/bin/env sh
HUSKY_SH="$(dirname -- "$0")/_/husky.sh"
if [ -f "$HUSKY_SH" ]; then
  . "$HUSKY_SH"
else
  echo "husky: warning: $HUSKY_SH not found, skipping Husky helper. Run 'npm install' to finish setup." >&2
fi

# Run lint-staged (linting and formatting on staged files)
npm run lint-staged || exit 1

# Run TypeScript type checking
echo "Running TypeScript type check..."
npm run type-check || exit 1

echo "âœ… Pre-commit checks passed!"
